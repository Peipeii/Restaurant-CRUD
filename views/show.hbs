<!-- ./views/show.handlebars -->
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<h3 class="mb-1 restaurant-show-title-en">{{restaurant.name_en}}</h3>

<div class="container w-50">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="img-fluid rounded mx-auto d-block" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 650px;">

      <div class="d-flex justify-content-center mt-4 mb-4">
        <a href=" /restaurants/{{restaurant._id}}/edit" class="text-muted me-4"><i class="fas fa-edit"
            title="edit"></i>編輯</a>
        {{!-- <a href="/restaurants/{{this._id}}/delete" class="text-muted"><i class="fas fa-trash-alt"
            title="delete"></i>刪除</a> --}}
        <form action="/restaurants/{{ restaurant._id }}/delete" method="POST">
          <a href='#' class="text-muted me-2" onclick='this.parentNode.submit(); return false;'><i class=" fas
                            fa-trash-alt" title="delete"></i>刪除</a>
        </form>
      </div>
    </div>
  </div>
</div>