<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container">
  <div class="d-flex justify-content-end me-3 mb-3">
    <a href="/restaurants/new">
      <button class="btn btn-outline-secondary"><i class="fas fa-plus"></i> 新增餐廳</button>
    </a>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4 mx-auto">
    {{#each restaurants}}
    <div class="col">
      <div class="card mb-3 h-100">
        <img class="card-img-top h-100" src="{{this.image}}" alt="{{this.name}}">
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>
          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i> {{this.category}}
          </div>
          <span class="badge rounded-pill bg-danger font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>
        <div class="card-footer text-right">
          <div class="d-flex justify-content-end">
            <form action="/restaurants/{{ this._id }}/delete" method="POST">
              <a href='#' class="text-muted me-2" onclick='this.parentNode.submit(); return false;'><i class=" fas
                fa-trash-alt" title="delete"></i></a>
            </form>

            <a href="/restaurants/{{this._id}}/edit" class="text-muted me-2"><i class="fas fa-edit"
                title="edit"></i></a>
            {{!-- <a href="/restaurants/{{this._id}}" class="text-muted me-4"><i class="fas fa-trash-alt"
                title="delete"></i></a> --}}
            <a href="/restaurants/{{this._id}}" class="text-dark"><i class="fas fa-ellipsis-h"
                title="more information"></i></a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>